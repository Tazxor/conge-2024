{% extends 'base.html.twig' %}

{% block title %}Commentaire{% endblock %}

{% block body %}
    <h1>Commentaire</h1>

    <table class="table">
        <tbody>
                    {% if commentaire.conge is not null and commentaire.conge.user is not null %}
                        <td>{{ commentaire.conge.user.email }}</td>
                        <td>{{ commentaire.conge.user.prenom }}</td>
                        <td>{{ commentaire.conge.user.nom }}</td>
                    {% else %}
                        <td colspan="3">Utilisateur non spécifié</td>
                    {% endif %}
            <tr>
                <th>ReponseUser</th>
                <td>{{ commentaire.reponseUser }}</td>
            </tr>
            <tr>
                <th>ReponseAdmin</th>
                <td>{{ commentaire.reponseAdmin }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_commentaire_index') }}">back to list</a>

    <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}">edit</a>

    {{ include('commentaire/_delete_form.html.twig') }}
{% endblock %}
